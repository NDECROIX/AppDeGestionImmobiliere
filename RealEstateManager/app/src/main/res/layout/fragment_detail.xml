<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/end_screen_margin"
        tools:context=".controllers.fragments.DetailFragment">

        <TextView
            android:id="@+id/fragment_detail_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_screen"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:text="Media"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_detail_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_detail_media"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/fragment_detail_item"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <TextView
            android:id="@+id/fragment_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_screen"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:text="Description"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/fragment_detail_recycler_view"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/fragment_detail_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="@dimen/margin_screen"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:text="@string/dummy_description_text"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/fragment_detail_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fragment_detail_surface"/>

        <TextView
            android:id="@+id/fragment_detail_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_surface_24"
            android:text=" Surface : 750 sq m"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_detail_description_text"/>

        <TextView
            android:id="@+id/fragment_detail_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_home_24"
            android:text=" Number of rooms : 8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_detail_surface"/>

        <TextView
            android:id="@+id/fragment_detail_bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_bedroom_24"
            android:text=" Number of bedrooms : 4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_detail_home"/>

        <TextView
            android:id="@+id/fragment_detail_bathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_bathroom_24"
            android:text=" Number of bathroom : 2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_detail_bedroom"/>

        <TextView
            android:id="@+id/fragment_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/margin_screen"
            android:drawableStart="@drawable/ic_address_24"
            android:gravity="top"
            android:text="Location :"
            app:layout_constraintTop_toBottomOf="@id/fragment_detail_bathroom"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/fragment_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="740 Park Avenue\nApt 6/7A\nNew York\nNY 10021\United States"
            app:layout_constraintTop_toTopOf="@id/fragment_detail_location"
            app:layout_constraintStart_toEndOf="@id/fragment_detail_location"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/end_screen_margin"
            android:layout_marginStart="@dimen/margin_screen"
            app:layout_constraintTop_toBottomOf="@id/fragment_detail_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>