<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:layout_marginStart="5dp"
    android:paddingStart="0dp"
    android:paddingEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground">

        <ImageView
            android:id="@+id/fragment_list_item_photo"
            android:layout_width="100dp"
            android:layout_height="74dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorAccent"
            android:contentDescription="@string/fragment_list_item_photo"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/gutter"
            android:maxLines="1"
            android:text="@string/fragment_list_item_type"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintEnd_toStartOf="@id/fragment_list_item_price"
            app:layout_constraintStart_toEndOf="@id/fragment_list_item_photo"
            app:layout_constraintTop_toTopOf="@id/fragment_list_item_photo" />

        <TextView
            android:id="@+id/fragment_list_item_borough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/fragment_list_item_borough"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toEndOf="@id/fragment_list_item_photo"
            app:layout_constraintTop_toBottomOf="@id/fragment_list_item_type" />

        <TextView
            android:id="@+id/fragment_list_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_dollar_24"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:text="@string/fragment_list_item_price"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/colorAccent"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/fragment_list_item_type"
            app:layout_constraintTop_toTopOf="@id/fragment_list_item_photo" />

        <TextView
            android:id="@+id/fragment_list_item_bathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_bathroom_24"
            android:gravity="bottom"
            android:text="@string/fragment_list_item_bathroom"
            app:layout_constraintStart_toEndOf="@id/fragment_list_item_bedroom"
            app:layout_constraintTop_toBottomOf="@id/fragment_list_item_borough" />

        <TextView
            android:id="@+id/fragment_list_item_bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_bedroom_24"
            android:gravity="bottom"
            android:text="@string/fragment_list_item_bedroom"
            app:layout_constraintStart_toEndOf="@id/fragment_list_item_home"
            app:layout_constraintTop_toBottomOf="@id/fragment_list_item_borough" />

        <TextView
            android:id="@+id/fragment_list_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_home_24"
            android:gravity="bottom"
            android:text="@string/fragment_list_item_home"
            app:layout_constraintStart_toEndOf="@id/fragment_list_item_surface"
            app:layout_constraintTop_toBottomOf="@id/fragment_list_item_borough" />

        <TextView
            android:id="@+id/fragment_list_item_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_surface_24"
            android:gravity="bottom"
            android:text="@string/fragment_list_item_surface"
            app:layout_constraintStart_toEndOf="@id/fragment_list_item_photo"
            app:layout_constraintTop_toBottomOf="@id/fragment_list_item_borough" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>