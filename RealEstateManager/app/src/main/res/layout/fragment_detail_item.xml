<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/fragment_detail_item_photo"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:background="@color/colorAccent"
        android:contentDescription="@string/fragment_detail_item_photo"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_detail_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundTextPhoto"
        android:padding="10dp"
        android:text="@string/fragment_detail_item_title"
        android:textColor="@android:color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/fragment_detail_item_photo"
        app:layout_constraintEnd_toEndOf="@id/fragment_detail_item_photo"
        app:layout_constraintStart_toStartOf="@id/fragment_detail_item_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>