<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/activity_agent_item_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_screen_margin"
        android:layout_marginEnd="@dimen/end_screen_margin"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="Real estate Manager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/activity_agent_item_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_screen_margin"
        android:layout_marginEnd="@dimen/end_screen_margin"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:text="agent@email.com"
        app:layout_constraintTop_toBottomOf="@id/activity_agent_item_names"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/activity_agent_item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_screen_margin"
        android:layout_marginEnd="@dimen/end_screen_margin"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:text="07.88.66.99.44"
        app:layout_constraintTop_toBottomOf="@id/activity_agent_item_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>